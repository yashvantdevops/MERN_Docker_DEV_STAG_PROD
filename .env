# ============================================================================
# MERN Stack - Development Environment Variables
# ============================================================================
# Default .env file (used when no specific --env-file is provided)
# For development, use: docker-compose -f docker-compose.dev.yaml --env-file .env.dev up

# MongoDB Configuration (must match docker-compose.yaml)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=dev_password
MONGO_DB_NAME=mern_dev_db

# Full Mongo connection URI used by backend
# Inside Docker, the hostname is the service/alias: mongodb-dev
MONGODB_URI=mongodb://admin:dev_password@mongodb-dev:27017/mern_dev_db?authSource=admin

# Redis Configuration
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_URL=redis://redis-dev:6379

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=development
LOG_LEVEL=debug
LOG_DIR=./logs
CORS_ORIGIN=http://localhost:3000
API_PREFIX=/api

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_PREFIX=/api

# Service Hostnames (internal Docker DNS)
BACKEND_HOST=backend-api-dev
BACKEND_HOSTNAME=backend-api-dev.local
MONGODB_HOST=mongodb-dev
MONGODB_HOSTNAME=mongodb-dev.local
REDIS_HOSTNAME=redis-dev.local
FRONTEND_HOST=frontend-web-dev
FRONTEND_HOSTNAME=frontend-web-dev.local

# Debug Mode
DEBUG=true
