# ============================================================================
# MERN Stack - Production Environment Variables
# ============================================================================
# Use with: docker-compose -f docker-compose.prod.yaml --env-file .env.prod up
# WARNING: CHANGE ALL PASSWORDS AND SECRETS IN PRODUCTION!

# MongoDB Configuration
MONGO_ROOT_USER=prod_admin
MONGO_ROOT_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD_STRONG
MONGO_DB_NAME=mern_production_db

# Redis Configuration
# Internal hostname matches the service name in docker-compose.prod.yml
REDIS_HOST=redis-prod
REDIS_PORT=6379
# In production, if you enable password auth in the redis command:
# REDIS_URL=redis://:YOUR_STRONG_REDIS_PASSWORD@redis-prod:6379
# For now (internal network only):
REDIS_URL=redis://redis-prod:6379

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=production
LOG_LEVEL=warn
LOG_DIR=./logs
# STRICTLY limit CORS to your actual domain in production
CORS_ORIGIN=https://yourdomain.com
API_PREFIX=/api

# Frontend Configuration
FRONTEND_PORT=80
# Points to the public HTTPS URL of your backend (Load Balancer/Nginx entry)
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_API_PREFIX=/api

# Service Hostnames (Internal Docker Network DNS)
BACKEND_HOST=backend-api-prod
BACKEND_HOSTNAME=backend-api-prod.local
MONGODB_HOST=mongodb-prod
MONGODB_HOSTNAME=mongodb-prod.local
REDIS_HOSTNAME=redis-prod.local
FRONTEND_HOST=frontend-web-prod
FRONTEND_HOSTNAME=frontend-web-prod.local

# Debug Mode (Always false in production)
DEBUG=false
