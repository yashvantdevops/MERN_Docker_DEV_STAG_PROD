# ============================================================================
# MERN Stack - Staging Environment Variables
# ============================================================================
# Use with: docker-compose -f docker-compose.staging.yaml --env-file .env.staging up

# MongoDB Configuration
MONGO_ROOT_USER=staging_admin
MONGO_ROOT_PASSWORD=staging_secure_password_change_me
MONGO_DB_NAME=mern_staging_db

# Redis Configuration (New)
# Hostname matches 'aliases' or 'container_name' in docker-compose.staging.yaml
REDIS_HOST=redis-staging
REDIS_PORT=6379
# Connection string for the backend
REDIS_URL=redis://redis-staging:6379

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=staging
LOG_LEVEL=info
LOG_DIR=./logs
# Restrict CORS to your staging domain
CORS_ORIGIN=https://staging.yourdomain.com
API_PREFIX=/api

# Frontend Configuration
FRONTEND_PORT=8080
# Points to the public HTTPS URL of your staging backend
REACT_APP_API_URL=https://api-staging.yourdomain.com
REACT_APP_API_PREFIX=/api

# Service Hostnames (Internal Docker Network DNS)
BACKEND_HOST=backend-api-staging
BACKEND_HOSTNAME=backend-api-staging.local
MONGODB_HOST=mongodb-staging
MONGODB_HOSTNAME=mongodb-staging.local
REDIS_HOSTNAME=redis-staging.local
FRONTEND_HOST=frontend-web-staging
FRONTEND_HOSTNAME=frontend-web-staging.local

# Debug Mode
DEBUG=false
