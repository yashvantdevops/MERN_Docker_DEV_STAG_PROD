# ============================================================================
# MERN Stack - Development Environment Variables
# ============================================================================
# Use with: docker-compose -f docker-compose.dev.yaml --env-file .env.dev up

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=dev_password
MONGO_DB_NAME=mern_dev_db

# Redis Configuration (New)
# Host must match the 'aliases' or 'container_name' in docker-compose.dev.yml
REDIS_HOST=redis-dev
REDIS_PORT=6379
# Standard connection URL format
REDIS_URL=redis://redis-dev:6379

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=development
LOG_LEVEL=debug
LOG_DIR=./logs
CORS_ORIGIN=http://localhost:3000
API_PREFIX=/api

# Frontend Configuration
FRONTEND_PORT=3000
# Points to the browser-accessible URL of the backend
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_PREFIX=/api

# Service Hostnames (Internal Docker Network DNS)
# These match the service aliases in your docker-compose file
BACKEND_HOST=backend-api-dev
BACKEND_HOSTNAME=backend-api-dev.local
MONGODB_HOST=mongodb-dev
MONGODB_HOSTNAME=mongodb-dev.local
REDIS_HOSTNAME=redis-dev.local
FRONTEND_HOST=frontend-web-dev
FRONTEND_HOSTNAME=frontend-web-dev.local

# Debug Mode
DEBUG=true
